{
  "name": "kompanion",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:client": "pnpm -r --filter='client' build",
    "build:website": "pnpm -r --filter='website' build",
    "dev:client": "pnpm -r --filter='client' dev",
    "dev:website": "pnpm -r --filter='website' dev",
    "start:client": "pnpm -r --filter='client' start",
    "setup:all": "pnpm install && pnpm -r --filter='client' prisma migrate deploy && pnpm -r --filter='client' prisma generate"
  },
  "workspaces": [
    "client",
    "website"
  ],
  "devDependencies": {
    "@biomejs/biome": "^1.5.3"
  },
  "dependencies": {
    "unist-util-visit": "^5.0.0"
  }
}
